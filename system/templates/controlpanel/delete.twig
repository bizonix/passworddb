{% extends "layouts/layout.twig" %}

{% block content %}
<div class="page-header">
  <h1>{{website.name}}</h1>
</div>
<div class="alert alert-block alert-danger">
  <h4 class="alert-heading">Warning!</h4>
  This will delete these control panel credentials.<br>
  This action cannot be undone.
</div>
<div class="row-fluid">
    <form method="POST" action="{{urlFor('controlpanel_delete', {'website_id': website.id, 'id': results.id})}}" class="form-horizontal">
      <fieldset>
        <legend>Delete Control Panel Login</legend>
        <div class="control-group">
          <label for="form-controlpanel-name" class="control-label">Website</label>
          <div class="controls">
            <span class="span2 uneditable-input" id="form-controlpanel-name">{{website.name}}{% if website.domain %} ({{website.domain}}){% endif %}</span>
            <p class="help-block">The website the control panel login is for.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-controlpanel-username" class="control-label">Username</label>
          <div class="controls">
            <span class="span2 uneditable-input" id="form-controlpanel-username">{{results.username}}</span>
            <p class="help-block">The control panel username.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-controlpanel-password" class="control-label">Password</label>
          <div class="controls">
            <span class="span2 uneditable-input" id="form-controlpanel-password">{{results.password}}</span>
            <p class="help-block">The control panel password.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-controlpanel-url" class="control-label">Login URL</label>
          <div class="controls">
            <span class="span3 uneditable-input" id="form-controlpanel-url">{{results.url}}</span>
            <p class="help-block">The URL to the control panel.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-controlpanel-notes" class="control-label">Notes</label>
          <div class="controls">
            <div class="span4 uneditable-input" style="height:150px;" id="form-controlpanel-notes">{{results.notes}}</div>
          </div>
        </div>
        <div class="form-actions">
          <input type="submit" class="btn btn-danger" value="Delete" />
          <a class="btn" href="{{urlFor('website', {"id":website.id})}}">Cancel</a>
        </div>
      </fieldset>
      <input type="hidden" name="{{csrf_key}}" value="{{csrf_token}}" />
    </form>
</div>

{% endblock %}