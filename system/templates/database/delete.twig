{% extends "layouts/layout.twig" %}

{% block content %}
<div class="page-header">
  <h1>{{website.name}}</h1>
</div>
<div class="alert alert-block alert-danger">
  <h4 class="alert-heading">Warning!</h4>
  This will delete these database credentials.<br>
  This action cannot be undone.
</div>
<div class="row-fluid">
    <form method="POST" action="{{urlFor('database_delete', {'website_id': website.id, 'id': results.id})}}" class="form-horizontal">
      <fieldset>
        <legend>Delete Database Credentials</legend>
        <div class="control-group">
          <label for="form-database-domain" class="control-label">Website</label>
          <div class="controls">
            <span class="span2 uneditable-input" id="form-database-name">{{website.name}}{% if website.domain %} ({{website.domain}}){% endif %}</span>
            <p class="help-block">The website the database credentials are for.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-database-type" class="control-label required">FTP Type</label>
          <div class="controls">
            <span class="span1 uneditable-input" id="form-database-type">{{results.type|upper}}</span>
            <p class="help-block">The type of connection.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-ftp-hostname" class="control-label">Hostname</label>
          <div class="controls">
            <span class="span3 uneditable-input" id="form-ftp-hostname">{{results.hostname}}</span>
            <p class="help-block">The hostname of the database server.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-database-username" class="control-label">Username</label>
          <div class="controls">
            <span class="span2 uneditable-input" id="form-database-username">{{results.username}}</span>
            <p class="help-block">The database username.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-database-password" class="control-label">Password</label>
          <div class="controls">
            <span class="span2 uneditable-input" id="form-database-password">{{results.password}}</span>
            <p class="help-block">The database password.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-database-database" class="control-label">Database</label>
          <div class="controls">
            <span class="span3 uneditable-input" id="form-database-database">{{results.database}}</span>
            <p class="help-block">The database name.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-database-url" class="control-label">Admin URL</label>
          <div class="controls">
            <span class="span3 uneditable-input" id="form-database-url">{{results.url}}</span>
            <p class="help-block">URL of the phpMyAdmin or other basabase management.</p>
          </div>
        </div>
        <div class="control-group">
          <label for="form-database-notes" class="control-label">Notes</label>
          <div class="controls">
            <div class="span4 uneditable-input" style="height:150px;" id="form-database-notes">{{results.notes}}</div>
          </div>
        </div>
        <div class="form-actions">
          <input type="submit" class="btn btn-danger" value="Delete" />
          <a class="btn" href="{{urlFor('website', {"id":website.id})}}">Cancel</a>
        </div>
      </fieldset>
      <input type="hidden" name="{{csrf_key}}" value="{{csrf_token}}" />
    </form>
</div>

{% endblock %}